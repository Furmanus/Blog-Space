<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<VBox spacing="12" alignment="CENTER" xmlns:fx="http://furman.pl/fmrs" fx:controller="pl.furman.client.gui.controllers.LoginScreenController">
	<children>
		<Text id="welcome">Welcome! Please log in</Text>
		<HBox alignment="CENTER" spacing="3">
			<Label>User Name:</Label>
			<TextField fx:id="userName" /> 
		</HBox>
		<HBox alignment="CENTER" spacing="12">
			<Label>Password: </Label>
			<PasswordField fx:id="password" />
		</HBox>
		<Button prefWidth="128" onMouseClicked="#loginButtonEventHandler">Login</Button>
		<Button prefWidth="128" onMouseClicked="#registerButtonEventHandler">Register</Button>
		<TextArea prefWidth="256" prefHeight="64" editable="false" maxWidth="256" disable="true" fx:id="messages"/>
	</children>
</VBox>